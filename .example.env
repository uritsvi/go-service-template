# -----------------------------------------------------------------------------
# Server (required)
# -----------------------------------------------------------------------------
# Port the HTTP server listens on (e.g. 8080).
SERVER_PORT=8080

# Graceful shutdown timeout (default: 10s)
SHUTDOWN_TIMEOUT=10s

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
# Log level: debug, info, warn, error (default: info)
LOG_LEVEL=info

# Use JSON log format (default: false)
LOG_JSON=false

LOG_MAX_MSG_LENGTH=1000
